{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Earthquakes per Year (Mâ‰¥6.0)",
  "width": 980,
  "height": 280,
  "data": {"url": "data/earthquakes_2000_2025_m6.csv"},
  "transform": [
    {"calculate": "year(datum.time)", "as": "year"},
    {"aggregate": [{"op": "count", "as": "quakes"}], "groupby": ["year"]},
    {
      "window": [{"op": "mean", "field": "quakes", "as": "ma_3yr"}],
      "frame": [-1, 1],
      "sort": [{"field": "year"}]
    }
  ],
  "layer": [
    {
      "mark": {"type": "line", "color": "#888"},
      "encoding": {
        "x": {"field": "year", "type": "temporal", "timeUnit": "year", "title": "Year"},
        "y": {"field": "quakes", "type": "quantitative", "title": "Count"}
      }
    },
    {
      "mark": {"type": "line", "strokeDash": [4,2], "strokeWidth": 2, "color": "#2c7fb8"},
      "encoding": {
        "x": {"field": "year", "type": "temporal", "timeUnit": "year"},
        "y": {"field": "ma_3yr", "type": "quantitative", "title": "3-yr moving average"}
      }
    }
  ]
}
